    <element name="Leather Leash" type="Item" source="Xenirath" id="ID_XENIRATH_ITEM_LEATHER_LEASH">
		<description>
			<p> A small leash made of some type of leather, made to strap or hold something or someone. </p>
		</description>
		<setters>
			<set name="category">Adventuring Gear</set>
			<set name="cost" currency="sp">1</set>
			<set name="weight" lb="1/2">1/2 lb.</set>
			<set name="stackable">true</set>
		</setters>
	</element>
